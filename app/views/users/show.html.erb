<p id="notice">
  <%= notice %>
</p>
<div>
  <% flash.each do |message_type, message| %>
        <div class="alert alert-success" %><%= message %></div>
      <% end %>
</div>
 
<div class="row">
  <div class="col-md-4">
      <section class="user-info">
        <%= gravatar_for @user%>
          <div>
            <p>
              <%= @user.name %>
            </p>
            <h5>
              <%= @user.email %>
            </h5>
          </div>
      </section>
  </div>
</div>


